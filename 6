f=["manzana", "plátano", "naranja", "cereza", "pera"]# Lista de frutas
a=input("coloca si si quieres añadir cereza ")#hace que quieras añadir cereza
if a.lower()=="si":#se realiza si "a" es igual a "si"
    f.append("cereza")#añade "cereza"
    print("se añadio")#dice que la añadio
else:#si no se cumple se realiza esto
    print("no se añadio")#dice que no añadio cereza
if "cereza" in f:# Comprobar si "cereza" está en "f"
    print("Cereza SÍ está en la lista")#coloca que si esta
else:#si no se cumple se realiza esto
    print("Cereza NO está en la lista")#imprime que no esta en la lista
